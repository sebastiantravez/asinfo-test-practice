            </column>
            <column name="user" type="VARCHAR(100)"></column>
            <column name="password" type="VARCHAR(100)"></column>
        </createTable>
        <addUniqueConstraint tableName="users" columnNames="user"
                             constraintName="ck_user"/>
    </changeSet>

